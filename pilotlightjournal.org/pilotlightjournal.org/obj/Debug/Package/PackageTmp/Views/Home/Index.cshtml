@{
    ViewBag.Title = "Pilot Light Journal";
    Layout = Request.Browser.IsMobileDevice
        ? "~/Views/Shared/_MobileLayout.cshtml"
        : "~/Views/Shared/_Layout.cshtml";
}

<div id="entrancetext-container">
    <div id="entrancetext">
            “We just wanted the heart’s <span id="entrancetext-special" class="entrancetext-nothightlighted">pilot light</span> to keep on burning.<br /> 
            I remember how there, at the edge of the world, there was
            <br /> another world.” 
            <br />&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;-&nbsp;Richard Jackson
    </div>
</div>

@section Scripts{

    <script type="text/javascript">
        //work to change css
        var count = 0;
        $(document).ready(function () {
            $("#entrancetext").mouseover(function () {
                if (count == 0) {
                    $("#entrancetext-special").switchClass("entrancetext-nothighlighted", "entrancetext-highlighted", "slow");
                    count++;
                }
            });
        });
    </script>
}