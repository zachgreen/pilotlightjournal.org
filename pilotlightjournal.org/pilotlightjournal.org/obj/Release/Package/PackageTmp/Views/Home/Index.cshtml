@section Scripts{

    <script type="text/javascript">
        //work to change css
        var count = 0;
        $(document).ready(function () {
            $("#entrancetext").mouseover(function () {
                if (count == 0) {
                    $("#entrancetext-special").switchClass("entrancetext-nothighlighted", "entrancetext-highlighted", "slow");
                    count++;
                }
            });
        });
    </script>
