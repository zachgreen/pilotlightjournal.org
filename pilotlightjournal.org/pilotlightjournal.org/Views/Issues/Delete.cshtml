@model pilotlightjournal.org.Models.Issue

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Issue</legend>

    <div class="display-label">ReleaseDate</div>
    <div class="display-field">@String.Format("{0:g}", Model.ReleaseDate)</div>

    <div class="display-label">Works</div>
    <div class="display-field">@(Model.Works == null ? "None" : Model.Works.Count.ToString())</div>

    <div class="display-label">Completed</div>
    <div class="display-field">@Model.Completed</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


