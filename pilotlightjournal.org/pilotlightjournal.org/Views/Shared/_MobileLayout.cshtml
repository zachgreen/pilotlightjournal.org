<!DOCTYPE html>
<html>
    <head>
        <title>@ViewBag.Title</title>
        <meta name="description" content="Pilot Light is an on-line journal of 21st century poetics and criticism." />
        @*<meta name="viewport" content="width=155, initial-scale=2, maximum-scale=2, minimum-scale=2" />*@
        <link href="@Url.Content("~/Content/mobile_pilotlightjournal.css")" rel="stylesheet" type="text/css" />
        <link rel="Shortcut Icon" href="@Url.Content("~/Content/favicon.ico")" />
    </head>
    <body>
        <div id="entrance-header">
            <div class="title">@Html.ActionLink("Pilot Light", "Index")</div>
            <div class="subtitle">A Journal of 21<span class="superscript">st</span> Century Poetics and Criticism</div>
            <div class="line">&nbsp;</div>
        </div>
        <div id="content">
            @RenderBody()
        </div>
        <div id="footer-right-nav">
            @Html.NavLink("Current Issue", "Index", new { controller = "Issue", issueId = "4" })&nbsp;|&nbsp;
            @Html.NavLink("Archive", "Archive", new { controller = "Issue" })&nbsp;|&nbsp;
            @Html.NavLink("Contributors", "Contributors", new { controller = "Home" })&nbsp;|&nbsp;
            @Html.NavLink("About", "About", "Home")
        </div>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/pilotlightjournal.js")" type="text/javascript"></script>
        <script type="text/javascript">
            var _gaq = _gaq || [];
            _gaq.push(['_setAccount', 'UA-22928619-1']);
            _gaq.push(['_trackPageview']);
            _gaq.push(['_trackPageLoadTime']);

            (function () {
                var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
                ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
                var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
            })();
        </script>
        @RenderSection("Scripts")
    </body>
</html>