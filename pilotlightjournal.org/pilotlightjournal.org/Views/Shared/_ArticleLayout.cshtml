<!DOCTYPE html>
<html>
    <head>
        <title>@ViewBag.Title</title>
        <meta name="description" content="Pilot Light is an on-line journal of 21st century poetics and criticism." />
        @RenderSection("AdditionalHead", false)
        <link href='http://fonts.googleapis.com/css?family=Josefin+Slab&v1' rel='stylesheet' type='text/css' />
        <link href="@Url.Content("~/Content/pilotlightjournal.css")" rel="stylesheet" type="text/css" />
        <link rel="Shortcut Icon" href="@Url.Content("~/Content/favicon.ico")" />
    </head>
    <body>
        <div id="article-header">
            <div class="title">@Html.ActionLink("Pilot Light", "Index", new { area = "", controller = "Home" })</div>
            <div class="subtitle">A Journal of 21<span class="superscript">st</span> Century Poetics and Criticism</div>
            <div class="line">&nbsp;</div>
            <div class="right-nav">
                @Html.NavLink("Current Issue", "Index", new { controller = "Issue", issueId = "3" })&nbsp;|&nbsp;
                @Html.NavLink("Archive", "Archive", new { controller = "Issue" })&nbsp;|&nbsp;
                @Html.NavLink("Contributors", "Contributors", new { controller = "Home" })&nbsp;|&nbsp;
                @Html.NavLink("About", "About", new { controller = "Home" })
            </div>
        </div>
        <div id="content">
            @RenderBody()
        </div>
        <div style="clear:both;"><br /><br /><br /></div>
        <div id="plugins">
            <div class="rss">@Html.Raw(Html.ActionLink("[replacethis]", "RssFeed", new { controller = "Home" }).ToString().Replace("[replacethis]", "<img src=\"/content/rss_orange.png\" width=\"30\" />"))</div>
            <div class="facebook">
                <div id="fb-root"></div>
                <script src="http://connect.facebook.net/en_US/all.js#appId=151583114929158&amp;xfbml=1"></script>
                <fb:like href="https://www.facebook.com/pages/Pilot-Light/251396038226389" send="false" layout="button_count" 
                    show_faces="false" colorscheme="light" font="arial"></fb:like>
            </div>
        </div>
    </body>
    <script src="@Url.Content("~/Scripts/jquery-1.5.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/pilotlightjournal.js")" type="text/javascript"></script>
    <script type="text/javascript">

        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-22928619-1']);
        _gaq.push(['_trackPageview']);
        _gaq.push(['_trackPageLoadTime']);

        (function () {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
    </script>
    @RenderSection("scripts", false)
</html>
